{% extends '@Game/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="tabbable">
                <ul class="nav nav-tabs nav-tabs-bottom">
                    <li class="active">
                        <a href="#number-badges" data-toggle="tab"><i class="icon-medal2"></i> Number of badges</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="number-badges">
                        <div class="panel panel-flat">
                            <div class="panel-heading">
                                <ul class="media-list media-list-linked">
                                    {% for user in users %}
                                        <li class="media"
                                            style="{% if app.user.username == user.user.username %}background: #f9ffe3;{% endif %}">
                                            <a href="{{ url('userprofile', {'username': user.user.username}) }}"
                                               class="media-link">
                                                <div class="media-left">
                                                    <img style="width: 50px; height: 50px;"
                                                         src="{{ user.user.profilePicture }}"
                                                         class="img-circle img-thumbnail" alt="">
                                                    <span class="badge bg-teal media-badge">{{ loop.index }}</span>
                                                </div>
                                                <div class="media-body">
                                                    <div class="media-heading text-semibold">{{ user.user.username }}</div>
                                                    <span class="text-muted"></span>
                                                </div>
                                                <div class="media-right media-middle text-nowrap">
                                                    <span class="text-muted">
                                                        <i class="icon-medal2"></i> {{ user.nbUnlockedBadges }}
                                                    </span>
                                                </div>
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
